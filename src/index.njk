  function goToVerse(globalVerseNum) {
    let surahNum = 1;
    for (let i = 0; i < surahVerseStarts.length; i++) {
      if (globalVerseNum >= surahVerseStarts[i]) {
        surahNum = i + 1;
      } else {
        break;
      }
    }
    const verseInSurah = globalVerseNum - surahVerseStarts[surahNum - 1] + 1;
    window.location.href = '/surah/' + surahNum + '/' + verseInSurah + '/';
  }
  
  document.getElementById('verseSearch').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      const num = parseInt(this.value);
      if (num >= 1 && num <= 6236) {
        goToVerse(num);
      }
    }
  });
  
  function goToRandomVerse() {
    const randomVerse = Math.floor(Math.random() * 6236) + 1;
    goToVerse(randomVerse);
  }
</script>
